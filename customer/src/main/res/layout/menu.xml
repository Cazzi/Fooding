<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border"
        android:orientation="horizontal"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/status_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/status_iv"
            android:gravity="start"
            android:text="da ciccio"
            android:textAppearance="@android:style/TextAppearance.Material.Display2"
            android:textColor="@android:color/secondary_text_light" />
    </RelativeLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/work_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:text="sempre chiusi"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/secondary_text_light" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:text="Largo Orbassano, 50"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/secondary_text_light" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:text="cibo decente per quel che costa"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/secondary_text_light" />
        </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/backgroundRecView">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dishes_rView"
            android:paddingStart="4dp"
            android:paddingEnd="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>
